    "@types/jest": "^26.0.20",
    "@types/lodash": "~4.14.168",
    "@types/node": "~14.14.20",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint-plugin-jest": "~24.3.2",
    "eslint-plugin-node": "~11.1.0",
    "eslint-plugin-prettier": "~3.2.0",
    "eslint-plugin-unicorn": "~27.0.0",
