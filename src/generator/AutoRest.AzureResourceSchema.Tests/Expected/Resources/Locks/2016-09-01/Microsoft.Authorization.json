      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Microsoft.Authorization/locks"
          ]
        },
        "apiVersion": {
          "type": "string",
          "enum": [
            "2016-09-01"
          ]
        },
        "properties": {
          "oneOf": [
            {
              "$ref": "#/definitions/ManagementLockProperties"
