{
  @:@(methodGroup.NameForProperty): operations.@(methodGroup.TypeName);
}
}
@foreach (var method in Model.MethodTemplateModels)
{
  @EmptyLine
  @:@(Include(new MethodTemplateTS(), method))
}
}
@EmptyLine
